<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/project_type_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/project_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="@string/type"
            android:textColor="@color/light_green_login_button"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/task_remove_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="0.3"
            android:src="@drawable/remove" />
    </LinearLayout>

    <TextView
        android:id="@+id/project_surah_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textColor="@color/light_green_login_button" />

    <LinearLayout
        android:id="@+id/project_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/project_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/type"
            android:textColor="@color/light_green_login_button" />

        <TextView
            android:id="@+id/project_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/type"
            android:textColor="@color/light_green_login_button" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/playlist_icon_holder"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="10dp"
        android:src="@drawable/list" />

    <TextView
        android:id="@+id/tv_playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/playlist_icon_holder"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/light_green_login_button" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/playlist_play_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="0.5"
            android:src="@drawable/play" />

        <ImageView
            android:id="@+id/playlist_remove_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="0.5"
            android:src="@drawable/remove" />
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.radioayah.util.CircularImageView
        android:id="@+id/nav_item_imageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/qari_pic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_item_imageView"
        android:layout_centerHorizontal="true"
        android:background="@color/nav_list_textview_name_background">

        <TextView
            android:id="@+id/username_in_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="@string/name_here"
            android:textColor="#FFF" />
    </LinearLayout>
</RelativeLayout>
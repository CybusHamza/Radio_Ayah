<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center_vertical"
    android:layout_gravity= "center_vertical"
    >

    <ImageView
        android:id="@+id/placeholder_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/task" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/placeholder_icon"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/manage_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/manage_project_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_description"
                android:textColor="@color/light_green_login_button"
                android:textSize="20sp" />
        </LinearLayout>
    <ImageView
        android:id="@+id/accept_proposal"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toLeftOf="@+id/reject_proposal"
        android:layout_marginRight="5dp"
        android:src="@drawable/edit" />

    <ImageView
        android:id="@+id/reject_proposal"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/delete_proj" />
</RelativeLayout>
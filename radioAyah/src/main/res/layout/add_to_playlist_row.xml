<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/add_playlist_playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/track_sign"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/add_playlist_playlist_name"
        android:src="@drawable/track" />

    <TextView
        android:id="@+id/teack_count_playlis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/track_sign"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/track_sign"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/addtoplaylistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/transparent_button_add_playlist"
        android:text="@string/add_to_playlist" />
</RelativeLayout>